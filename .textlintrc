{
  "plugins": [
    "latex2e"
  ],
  "filters": {
    "comments": {
      "enablingComment": "textlint-enable",
      "disablingComment": "textlint-disable"
    }
  },
  "rules": {
    "preset-ja-engineering-paper": true,
    "preset-ja-technical-writing": {
      "ja-no-mixed-period": {
        "periodMark": "．"
      },
      "max-kanji-continuous-len": {
        "max": 6,
        "allow": [
          "筑波大学計算科学研究",
          "産業技術総合研究所"
        ]
      }
    },
    "preset-jtf-style": {
      "1.2.1.句点(。)と読点(、)": false,
      "1.2.2.ピリオド(.)とカンマ(,)": false,
      "4.1.3.ピリオド(.)、カンマ(,)": false
    }
  }
}